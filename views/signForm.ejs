<!DOCTYPE html>
<!-- Created By CodingNepal -->
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <title>SignUp Form</title>
    <!-- <link rel="stylesheet" type="text/css" href="../public/css/signupFormStyle.css" /> -->
    <link rel="stylesheet" type="text/css" href="/css/signupFormStyle.css">

  </head>
  <body>
    <div class="wrapper">
      <div class="title">SignUp Form</div>
      <form action="/signup" method="post" >
        <div class="field">
          <input type="text" name="email" required />
          <label>Email Address</label>
        </div>
        <div class="field">
          <input type="password" name="password" required />
          <label>Password</label>
        </div>
        <div class="field">
          <input type="number" name="pin" required />
          <label>PIN Code</label>
        </div>
        <div class="field">
          <select
            name="role"
            id="role"
            class="input-field"
            style="
              border: 1px solid gray;
              color: gray;
              padding: 10px;
              font-size: 16px;
              margin-left: 18%;
            "
            required
          >
            <option value="customer">Customer</option>
            <option value="municipalcorparation">Municipal Corparation</option>
          </select>
        </div>
        <div class="field">
          <input type="submit" value="SignUp" />
        </div>
      </form>
    </div>
  </body>
</html>
