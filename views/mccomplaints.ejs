      <div class="complaints_container">
        <!-- Loop through complaints and display them -->
        <!-- Loop through complaints and display them -->
<% for (let i = 0; i < allComplaints.length; i++) { %>
    <div class="complaint" id="mcComplaint">
      <h3>Title: <%= allComplaints[i].title %></h3>
      <p>Description: <%= allComplaints[i].description %></p>
      <p>Status: <%= allComplaints[i].status %></p>
  
      <!-- Add a form to update the status -->
      <form action="/updateStatus" method="post">
        <label for="status">Update Status:</label>
        <select name="status" required>
          <option value="submitted" <%= allComplaints[i].status === 'submitted' ? 'selected' : '' %>>Submitted</option>
          <option value="processing" <%= allComplaints[i].status === 'processing' ? 'selected' : '' %>>Processing</option>
          <option value="completed" <%= allComplaints[i].status === 'completed' ? 'selected' : '' %>>Completed</option>
          <option value="rejected" <%= allComplaints[i].status === 'rejected' ? 'selected' : '' %>>Rejected</option>
        </select>
        <input type="hidden" name="complaintId" value="<%= allComplaints[i]._id %>">
        <button type="submit">Update Status</button>
      </form>
    </div>
  <% } %>
  
      </div>
